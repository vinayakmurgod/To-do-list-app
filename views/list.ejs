<%- include('header'); -%>

    <div class="box btn-grad " id="heading" >

      <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">

      <% for (let i=0;i<newItems.length;i++){ %>
        <form  action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkBox" value= "<%= newItems[i]._id %>" onChange="this.form.submit()" </input>
            <input name="listName" type="hidden" value=<%= listTitle %> >
            <p> <%= newItems[i].name %> </p>
          </div>
        </form>
      <% } %>

    <form  class="item" action="/" method="post">
      <input type="text" name="newEntry" placeholder="New item" autocomplete="off">
      <button type="submit" name="list" value=<%= listTitle %> >+</button>
    </form>

    </div>

<%- include('footer'); -%>
